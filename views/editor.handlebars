<div id="editor">
  <div class="form-container">
    <div class="column-1">
      <!-- Header to indicate whether the user is editing or creating a new work -->
      <h1>{{#if workId}} Edit {{else}} Create {{/if}} Work</h1> 

      <!-- Form for creating or editing a work -->
      <form id="editor-form">
        <!-- Hidden input to store the work ID if editing an existing work -->
        <input type="hidden" id="work-id" value="{{work.id}}" />

        <!-- Dropdown to optionally add the work to an existing collection -->
        <label for="existing-works">Add to Existing Collection (Optional)</label>
        <select id="existing-works" name="existing-works">
          <option value="">Select an existing work (Optional)</option>
          <!-- Options will be dynamically populated in JavaScript -->
        </select>

        <!-- Input field for specifying the collection title -->
        <label for="collection-title">Collection Title (Optional)</label>
        <input
        type="text"
        id="collection-title"
        name="collection-title"
        value="{{#if work.collectionTitle}}{{work.collectionTitle}}{{/if}}"
        />

        <!-- Input field for the work's title -->
        <label for="title">Title</label>
        <input
          type="text"
          id="title"
          name="title"
          value="{{work.title}}"
          required
        />

        <!-- Textarea for the content of the work -->
        <label for="content">Content</label>
        <textarea
          id="content"
          name="content"
          rows="10"
          required
        >{{work.content}}</textarea>

        <!-- Form buttons for saving, posting, or deleting the work -->
        <div class="form-buttons">
          <button type="button" id="save-button">Save</button>
          <button type="button" id="post-button">Post</button>
          {{#if workId}}
            <button type="button" id="delete-button" data-work-id="{{work.id}}">Delete</button>
          {{/if}}
        </div>          </form>
    </div>

    <div class="column-2">
      <!-- Section for displaying comments related to the work -->
      <div id="comments-list" class="comments-section">
        <h2>Comments</h2>
        <!-- Loop through and display each comment if there are any -->
        {{#if comments.length}}
          {{#each comments}}
            <div class="comment">
              <p>{{this.content}}</p>
              <p class="username">- {{this.user.username}} on {{format_date this.createdAt}}</p>
            </div>
          {{/each}}
        {{else}}
          <!-- Display a message if no comments are available -->
          <p>No comments yet.</p>
        {{/if}}
      </div>
    </div>
  </div>
</div>

<!-- Link to external JavaScript file -->
<script src="/js/editor.js"></script>